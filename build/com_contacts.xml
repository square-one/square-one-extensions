<?xml version="1.0" encoding="UTF-8"?>
<project name="com_contacts" default="build" basedir="../">
	
    <target name="build">
        
        <xmlproperty file="administrator/components/com_contacts/contacts.xml" />
        <property name="version" value="${extension.version}" />
        <property name="filename" value="com_contacts-${version}.zip" />
        
        <available file="${filename}" property="zip" value="yes" />
        <if>
            <equals arg1="${zip}" arg2="yes" />
            <then>
                <delete file="${filename}" />
            </then>
        </if>
		
		<mkdir dir=".tmp" />
        
        <copy dir="administrator/components/com_contacts" todir=".tmp/admin" />
		<copy file="administrator/language/en-GB/en-GB.com_contacts.ini" tofile=".tmp/admin/language/en-GB/en-GB.com_contacts.ini" />
		<copy file="administrator/language/en-GB/en-GB.com_contacts.sys.ini" tofile=".tmp/admin/language/en-GB/en-GB.com_contacts.sys.ini" />
		<copy dir="components/com_contacts" todir=".tmp/site" />
		<copy file="language/en-GB/en-GB.com_contacts.ini" tofile=".tmp/site/language/en-GB/en-GB.com_contacts.ini" />
		<copy file="language/en-GB/en-GB.com_contacts.sys.ini" tofile=".tmp/site/language/en-GB/en-GB.com_contacts.sys.ini" />
		<copy dir="media/contacts" todir=".tmp/media/contacts" />
		
		<move file=".tmp/admin/contacts.xml" tofile=".tmp/contacts.xml" />
        
        <zip destfile="build/${filename}" basedir=".tmp" />
        
        <delete dir=".tmp" includeemptydirs="true" />
	</target>

</project>