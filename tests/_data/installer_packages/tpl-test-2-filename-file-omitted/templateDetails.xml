					<option value="times">Times New Roman</option>
					<option value="trebuchet">Trebuchet</option>
					<option value="verdana">Verdana</option>
				</field>
			</fieldset>
			<fieldset name="Test">
				<field name="setGeneratorTag" type="text" default="Joomla Engineering | http://JoomlaEngineering.com" label="Generator Meta Tag" description="Customize the generator meta tag output by your template." size="56" />
			</fieldset>
		</fields>
	</config>
